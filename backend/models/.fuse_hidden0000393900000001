<?php

namespace app\models;

use Yii;
use yii\base\Model;
use yii\data\ActiveDataProvider;
use app\models\Ferias;
use app\models\Professor;

/**
 * FeriasSearch represents the model behind the search form about `app\models\Ferias`.
 */
class FeriasSearch extends Ferias
{
    /**
     * @inheritdoc
     */
    public function rules()
    {
        return [
            [['id', 'idusuario', 'tipo'], 'integer'],
            [['nomeusuario', 'emailusuario', 'dataSaida', 'dataRetorno', 'dataPedido'], 'safe'],
        ];
    }

    /**
     * @inheritdoc
     */
    public function scenarios()
    {
        // bypass scenarios() implementation in the parent class
        return Model::scenarios();
    }

     
    public function criarDataProvider($dataProvider,$query){
        
        if (!$this->validate()) {
            // uncomment the following line if you do not want to return any records when validation fails
            // $query->where('0=1');
            return $dataProvider;
        }

        $dataProvider->sort->attributes['diferencaData'] = [
        'asc' => ['diferencaData' => SORT_ASC],
        'desc' => ['diferencaData' => SORT_DESC],
        ];

        // grid filtering conditions
        $query->andFilterWhere([
            'id' => $this->id,
            'idusuario' => $this->idusuario,
            'tipo' => $this->tipo,
            'dataSaida' => $this->dataSaida,
            'dataRetorno' => $this->dataRetorno,
            'dataPedido' => $this->dataPedido,
        ]);

        $query->andFilterWhere(['like', 'nomeusuario', $this->nomeusuario])
            ->andFilterWhere(['like', 'emailusuario', $this->emailusuario]);
            
        return $dataProvider;
    } 
    
    public function search($params,$ano){
        
/*        $query = Ferias::find()->select("j17_professores.nomeProfessor, j17_ferias.*, YEAR(dataSaida) as anoSaida")
        ->where("(YEAR (dataSaida)) = ".$ano)->join('right Join','j17_professores', 'j17_professores.idUser = j17_ferias.idusuario')
        ->groupBy("j17_professores.nomeProfessor");*/

        /*$query = Professor::find()->select("j17_professores.nome, j17_ferias.*, YEAR(dataSaida) as anoSaida")
        ->join('right', 'CREATE VIEW j17_ferias1 AS
            SELECT j17_ferias1.*
            FROM j17_ferias1 
            WHERE (YEAR (dataSaida)) = ".$ano)', 'j17_professores.idUser = j17_ferias.idusuario');*/

        $query = Ferias::findBySql("SELECT * FROM (j17_professores RIGHT JOIN 
            (SELECT *
            FROM j17_ferias 
            WHERE YEAR (dataSaida) = '$ano') as J17) as J18");

        
        
        // add conditions that should always apply here

        $dataProvider = new ActiveDataProvider([
            'query' => $query,
        ]);

        $this->load($params);

        $dataProvider = $this->criarDataProvider($dataProvider,$query);
        
        return $dataProvider;
        
    }

    public function searchProfessores($params,$ano){
        
        /*$query = Ferias::find()->select("j17_professores.nome, j17_ferias.*, YEAR(dataSaida) as anoSaida")
        ->joinWith('j17_professores')
        ->where("(YEAR (dataSaida)) = ".$ano)
        ->groupBy("j17_professores.nome");*/

        $query = Professor::find()->select("j17_professores.nome, j17_ferias.*, YEAR(dataSaida) as anoSaida")
        ->joinWith('SELECT j17_ferias.* FROM j17_professores right JOIN j17_ferias WHERE (YEAR (dataSaida)) = ".$ano');
        
        
        // add conditions that should always apply here

        $dataProvider = new ActiveDataProvider([
            'query' => $query,
        ]);

        $this->load($params);

        $dataProvider = $this->criarDataProvider($dataProvider,$query);
        
        return $dataProvider;
        
    }
     
     
    public function searchMinhasFerias($params, $idUser ,$ano)
    {

            $query = Ferias::find()->select("j17_ferias.*, DATEDIFF((dataRetorno),(dataSaida)) as diferencaData")->where("idusuario = '".$idUser."' 
            AND YEAR(dataSaida) = ".$ano);

        // add conditions that should always apply here

        $dataProvider = new ActiveDataProvider([
            'query' => $query,
        ]);

        $this->load($params);

        $dataProvider = $this->criarDataProvider($dataProvider,$query);

        return $dataProvider;
    }

}
